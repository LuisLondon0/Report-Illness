<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título con fondo azul -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluePrimary"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar emfermedad"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#25707070" />

        <!-- Campos de entrada -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly_phone"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"

            app:startIconDrawable="@drawable/ic_cedula"
            app:startIconTint="@color/verdeturquesa">

            <com.google.android.material.textfield.TextInputEditText

                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:id="@+id/editTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter ID"
                android:inputType="number"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly_name"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"

            app:startIconDrawable="@drawable/ic_virus"
            app:startIconTint="@color/verdeturquesa">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribir Nombre de la Emfermedad"
                android:inputType="textPersonName"
                android:layout_marginTop="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly_lastname"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"

            app:startIconDrawable="@drawable/ic_formulario"
            app:startIconTint="@color/verdeturquesa">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribir Descripción"
                android:inputType="textMultiLine"
                android:layout_marginTop="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly_email"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"

            app:startIconDrawable="@drawable/ic_formulario"
            app:startIconTint="@color/verdeturquesa">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUrgencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="escribir Urgencia"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkBoxVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacuna"
            android:layout_marginTop="16dp"
            />

        <!-- Campo Tratamiento -->
        <CheckBox
            android:id="@+id/checkBoxTratamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tratamiento"
            android:layout_marginTop="16dp" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSubmit"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@+id/buttonCancel"
        android:layout_marginStart="86dp"
        android:layout_marginBottom="-72dp"
        android:layout_toEndOf="@+id/buttonCancel"
        android:backgroundTint="@color/blueAccent"
        android:onClick="btnSubmit"
        android:text="@string/submit1"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancel"
        android:layout_width="139dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="87dp"
        android:backgroundTint="@color/blueAccent"
        android:onClick="btnSubmit"
        android:text="@string/submit2"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>