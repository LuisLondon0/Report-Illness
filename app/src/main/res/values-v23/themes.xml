        <item name="colorSecondary">@color/blueAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="android:statusBarColor">@color/bluePrimaryDark</item>
    </style>
</resources>